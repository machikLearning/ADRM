<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/goMedicineCardPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="5"
            android:background="@drawable/menubutton"
            android:onClick="onClick"
            android:text="의약품 안전카드"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/goListPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="5"
            android:background="#3b3f4d"
            android:onClick="onClick"
            android:text="알레르기 약물 검색"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#dcf0f9"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="10dp"
            />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:background="@drawable/logoutbutton"
            android:drawableLeft="@drawable/logoutbtn"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:text="로그아웃" />
    </LinearLayout>

    <WebView
        android:id = "@+id/medicineCardWebView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"></WebView>
</LinearLayout>